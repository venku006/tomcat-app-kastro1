<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>DevOps Training Portal</display-name>
    <description>Jenkins Docker Kubernetes Terraform Training Portal</description>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Training Info Servlet -->
    <servlet>
        <servlet-name>TrainingInfoServlet</servlet-name>
        <servlet-class>com.kastro.training.servlet.TrainingInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrainingInfoServlet</servlet-name>
        <url-pattern>/api/training-info</url-pattern>
    </servlet-mapping>
    
    <!-- Course Content Servlet -->
    <servlet>
        <servlet-name>CourseContentServlet</servlet-name>
        <servlet-class>com.kastro.training.servlet.CourseContentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseContentServlet</servlet-name>
        <url-pattern>/api/course-content</url-pattern>
    </servlet-mapping>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>
</web-app>